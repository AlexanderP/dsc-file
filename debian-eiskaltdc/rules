#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

NCPUS := $(shell getconf _NPROCESSORS_ONLN 2>/dev/null || echo 1)

ifeq ($(NCPUS),-1)
	NCPUS:=1
endif

ifeq ($(NCPUS),0)
	NCPUS:=1
endif

#CMAKEOPTS = -DCMAKE_INSTALL_PREFIX='/usr' -LIB_INSTALL_DIR='lib/eiskaltdc' -LINK="DYNAMIC" .
CMAKEOPTS = -DCMAKE_INSTALL_PREFIX='/usr' .
configure: configure-stamp
configure-stamp:
	dh_testdir
	cmake $(CMAKEOPTS)
	touch $@
build: configure build-stamp
build-stamp:
	dh_testdir
	$(MAKE) -j$(NCPUS)
	touch $@
clean: do-clean
do-clean:
	dh_testdir
	dh_testroot
	test ! -f Makefile || $(MAKE) clean
	dh_clean
install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(MAKE) install DESTDIR=debian/eiskaltdc
binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	rm -f debian/eiskaltdc/usr/share/eiskaltdc/COPYING
	#dh_install
	dh_link usr/share/doc/eiskaltdc/copyright usr/share/eiskaltdc/COPYING
	#dh_installdebconf
	dh_installdocs
	#dh_installinfo
	dh_installchangelogs ChangeLog
	dh_strip
	dh_compress
	#dh_fixperms
	dh_installdeb
	dh_makeshlibs
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb
binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure patch unpatch do-clean
		

