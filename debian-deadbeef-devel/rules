#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

confflags = --prefix=/usr

configure: configure-stamp
configure-stamp:
	dh_testdir
	./autogen.sh
	./configure $(confflags)
	touch $@
build: configure build-stamp
build-stamp:
	dh_testdir
	$(MAKE) 
	touch $@
clean: do-clean
do-clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	(test ! -f Makefile || $(MAKE) clean)
	dh_clean
install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp
binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install
	dh_installdocs
	dh_installman debian/deadbeef.1
	dh_installchangelogs ChangeLog
	rm -f debian/deadbeef/usr/share/doc/deadbeef/COPYING.GPLv2
	rm -f debian/deadbeef/usr/share/doc/deadbeef/COPYING.LGPLv2.1
	dh_link /usr/share/common-licenses/LGPL-2.1 usr/share/doc/deadbeef/COPYING.LGPLv2.1
	dh_link /usr/share/common-licenses/GPL-2 usr/share/doc/deadbeef/COPYING.GPLv2
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_installdebconf
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure patch unpatch do-clean



