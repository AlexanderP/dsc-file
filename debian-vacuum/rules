#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
	NCPUS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
endif

ifeq (,$(NCPUS))
	NCPUS := $(shell getconf _NPROCESSORS_ONLN 2>/dev/null || echo 1)
endif

ifeq ($(NCPUS),-1)
	NCPUS:=1
endif

ifeq ($(NCPUS),0)
	NCPUS:=1
endif

ifneq (,$(filter noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
endif

ifneq (,$(filter lzma,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zlzma -z9
endif

ifneq (,$(filter xz,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zxz -z9
endif

DEBIAN_CODENAME = $(shell echo $$DIST)
ifeq "$(DEBIAN_CODENAME)" ""
	DEBIAN_CODENAME = $(shell dpkg-parsechangelog | awk '/^Distribution: / {print $$2}')
endif

ifeq "$(DEBIAN_CODENAME)" "maverick"
	CONTROL = control.lqtweb
else
	CONTROL = control.nolqtweb
endif

QMAKEOPTS = INSTALL_PREFIX=/usr -recursive vacuum.pro
configure: configure-stamp
configure-stamp:
	dh_testdir
	cp debian/$(CONTROL) debian/control
	qmake $(QMAKEOPTS)
	touch $@
build: configure build-stamp
build-stamp:
	dh_testdir
	$(MAKE) -j$(NCPUS)
	touch $@
clean: do-clean
do-clean:
	dh_testdir
	dh_testroot
	cp debian/$(CONTROL) debian/control
	test ! -f Makefile || $(MAKE) clean
	dh_clean
install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(MAKE) install INSTALL_ROOT=$(CURDIR)/debian/tmp
binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install
	for size in 16 24 32 48 64 96 128 ; do \
	mkdir -p $(CURDIR)/debian/vacuum/usr/share/icons/hicolor/$${size}x$${size}/apps/ && install -Dm644 $(CURDIR)/resources/menuicons/shared/mainwindowlogo$${size}.png $(CURDIR)/debian/vacuum/usr/share/icons/hicolor/$${size}x$${size}/apps/vacuum.png ; \
	done
	find $(CURDIR)/debian/vacuum -depth -type d -name .svn -exec rm -rf \{\} \;
	rm -f $(CURDIR)/debian/vacuum/usr/share/vacuum/resources/adiummessagestyles/yMous/Contents/Resources/license.txt
	rm -f $(CURDIR)/debian/vacuum/usr/share/doc/vacuum/COPYING
	dh_installdocs
	dh_installdebconf
	dh_installchangelogs CHANGELOG
	dh_installman debian/vacuum.1
	#chmod 644 $(CURDIR)/debian/vacuum/usr/lib/libvacuumutils.so.1.0.0
ifeq (,$(filter nostrip,$(DEB_BUILD_OPTIONS)))
	dh_strip
endif
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_makeshlibs
	dh_shlibdeps
	dh_installdebconf
	dh_gencontrol
	dh_md5sums
	dh_builddeb $(BUILDDEBFLAGS)
binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure patch unpatch do-clean
