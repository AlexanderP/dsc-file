#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

NCPUS := $(shell getconf _NPROCESSORS_ONLN 2>/dev/null || echo 1)

ifeq ($(NCPUS),-1)
	NCPUS:=1
endif

ifeq ($(NCPUS),0)
	NCPUS:=1
endif
CMAKEOPTS = -DCMAKE_INSTALL_PREFIX='/usr' .
configure: configure-stamp
configure-stamp:
	dh_testdir
	cmake $(CMAKEOPTS)
	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp  
	dh_testdir
	#$(MAKE) -j$(NCPUS)
	$(MAKE)
	touch $@

clean: 
	dh_testdir
	dh_testroot
	test ! -f Makefile || $(MAKE) clean
	test ! -f Makefile || rm Makefile
	test ! -f Makefile || rm src/Makefile
	rm -f build-stamp configure-stamp
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	#install -d $(CURDIR)/debian/tmp/usr/bin
	#install -d $(CURDIR)/debian/tmp/usr/share/applications
	#install -d $(CURDIR)/debian/tmp/usr/share/icons/hicolor/64x64/apps
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp
	#install -m 0755 $(CURDIR)/src/clementine $(CURDIR)/debian/tmp/usr/bin/clementine
	#for size in 16 32 64 ; do \
	#mkdir -p $(CURDIR)/debian/tmp/usr/share/icons/hicolor/$${size}x$${size}/apps/ && install -Dm644 $(CURDIR)/dist/clementine_$${size}.png $(CURDIR)/debian/tmp/usr/share/icons/hicolor/$${size}x$${size}/apps/application-x-clementine.png ; \
	#done
binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install
	dh_installdocs
	dh_installman debian/clementine.1
	dh_install dist/clementine.desktop /usr/share/applications/
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_installdebconf
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure patch unpatch do-clean

