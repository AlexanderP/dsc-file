#!/usr/bin/make -f
#export DH_VERBOSE=1

ifneq (,$(filter lzma,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zlzma -z9
endif

ifneq (,$(filter xz,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zxz -z9
endif

%:
	dh $@ --parallel

override_dh_install:
	dh_install
	find $(CURDIR)/debian -depth -type f -name COPYING -exec rm -rf \{\} \;
	find $(CURDIR)/debian -depth -type f -name ChangeLog -exec rm -rf \{\} \;

override_dh_builddeb:
	dh_builddeb $(BUILDDEBFLAGS)
