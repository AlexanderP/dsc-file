#!/usr/bin/make -f
# -*- makefile -*-

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
	NCPUS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
endif

ifeq (,$(NCPUS))
	NCPUS := $(shell getconf _NPROCESSORS_ONLN 2>/dev/null || echo 1)
endif

ifeq ($(NCPUS),-1)
	NCPUS:=1
endif

ifeq ($(NCPUS),0)
	NCPUS:=1
endif

ifneq (,$(filter noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
endif

ifneq (,$(filter lzma,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zlzma -z9
endif

ifneq (,$(filter xz,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zxz -z9
endif

DEBIAN_CODENAME = $(shell echo $$DIST)
ifeq "$(DEBIAN_CODENAME)" ""
	DEBIAN_CODENAME = $(shell dpkg-parsechangelog | awk '/^Distribution: / {print $$2}')
endif
ifeq "$(DEBIAN_CODENAME)" "sid"
	CONTROL = control.jpeg8
else
	ifeq "$(DEBIAN_CODENAME)" "wheezy"
		CONTROL = control.jpeg8
	else
		CONTROL = control.jpeg62
	endif
endif

CMAKEOPTS = -DCMAKE_INSTALL_PREFIX='/usr' ..
configure: configure-stamp
configure-stamp:
	dh_testdir
	cp debian/$(CONTROL) debian/control
	mkdir scantailor-build
	cd scantailor-build && cmake $(CMAKEOPTS)
	touch $@
build: configure build-arch build-indep
build-arch: build-stamp
build-indep: build-stamp
build-stamp:
	dh_testdir
	cd scantailor-build && $(MAKE) -j$(NCPUS)
	touch $@
clean: do-clean
do-clean:
	dh_testdir
	dh_testroot
	cp debian/$(CONTROL) debian/control
	test ! -d scantailor-build || rm -r kvirc-build
	dh_clean
install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	cd scantailor-build && $(MAKE) install DESTDIR=../debian/scantailor
binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install
	dh_link
	dh_installdocs
	dh_installmime
	dh_installman
	dh_installchangelogs
ifeq (,$(filter nostrip,$(DEB_BUILD_OPTIONS)))
	dh_strip
endif
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_shlibdeps
	dh_installdeb
	dh_installdebconf
	dh_gencontrol
	dh_md5sums
	dh_builddeb $(BUILDDEBFLAGS)
binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure patch unpatch do-clean
