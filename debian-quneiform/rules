#!/usr/bin/make -f
export DH_VERBOSE=1 

ifneq (,$(filter noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
endif

ifneq (,$(filter lzma,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zlzma -z9
endif

ifneq (,$(filter xz,$(DEB_BUILD_OPTIONS)))
	BUILDDEBFLAGS= -- -Zxz -z9
endif

%:
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- -DTESTS=No -DCMAKE_BUILD_TYPE=Debug

override_dh_builddeb:
	dh_builddeb $(BUILDDEBFLAGS)

override_dh_strip:
ifeq (,$(filter nostrip,$(DEB_BUILD_OPTIONS)))
	dh_strip
endif

override_dh_installman:
	cp $(CURDIR)/doc/cuneiform_en.1 cuneiform.1
	dh_installman
