Author: Mateusz ≈Åukasik <mati75@linuxmint.pl>

 
--- smplayer-16.1.0+svn7477.orig/src/smplayer.pro
+++ smplayer-16.1.0+svn7477/src/smplayer.pro
@@ -33,6 +33,11 @@ DEFINES += CAPTURE_STREAM
 DEFINES += BOOKMARKS
 DEFINES += MOUSE_GESTURES
 
+QMAKE_CPPFLAGS *= $(shell dpkg-buildflags --get CPPFLAGS)
