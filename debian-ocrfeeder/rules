#!/usr/bin/make -f
# -*- makefile -*-

#export DH_VERBOSE=1
export XDG_RUNTIME_DIR=/tmp

DEBIAN_CODENAME = $(shell echo $$DIST)
ifeq "$(DEBIAN_CODENAME)" ""
	DEBIAN_CODENAME = $(shell dpkg-parsechangelog | awk '/^Distribution: / {print $$2}')
endif

%:
	dh $@ --with python3

override_dh_auto_configure:
	./autogen.sh
	dh_auto_configure

override_dh_builddeb:
	dh_builddeb -- -Zxz -z9
