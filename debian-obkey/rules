#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PYTHON=python2.6
PACKAGE=obkey
build: build-stamp
build-stamp:
	dh_testdir
	$(PYTHON) setup.py build
	touch $@
clean: do-clean
do-clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	$(PYTHON) setup.py clean --all
	dh_clean
install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(PYTHON) setup.py install --root=$(CURDIR)/debian/$(PACKAGE) --no-compile --prefix=/usr
binary-indep: build install
binary-arch: build install
	dh_testdir
	dh_testroot
	#dh_link
	dh_installdocs
	#dh_installinfo
	dh_installchangelogs
	dh_installman debian/obkey.1
	dh_install debian/obkey.xpm usr/share/pixmaps
	dh_install debian/obkey.desktop usr/share/applications
	dh_strip
	dh_compress
	dh_fixperms
	dh_shlibdeps
	dh_pycentral
	dh_pysupport
	dh_installdeb
	dh_installdebconf
	dh_gencontrol
	dh_md5sums
	dh_builddeb
binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure patch unpatch do-clean

