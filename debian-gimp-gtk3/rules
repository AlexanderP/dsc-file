#!/usr/bin/make -f
DH_VERBOSE = 1

DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

PREFIXDIR=$(CURDIR)/debian/tmp2/usr/lib/gimpgtk3
BABLOPT= --prefix="$(PREFIXDIR)" --disable-docs
GEGLOPT= --prefix="$(PREFIXDIR)" --disable-docs
MYPAINTOPT= --prefix="${PREFIXDIR}"
GIMPOPT= --prefix="${PREFIXDIR}" --disable-docs --disable-python
LCMSOPT= --prefix="$(PREFIXDIR)"
LPNGOPT= --prefix="$(PREFIXDIR)"

ifneq (,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
	NUMJOBS = $(patsubst parallel=%,%,$(filter parallel=%,$(DEB_BUILD_OPTIONS)))
endif

ifeq (,$(NUMJOBS))
	NUMJOBS = 1
endif

DEBIAN_CODENAME = $(shell echo $$DIST)
ifeq "$(DEBIAN_CODENAME)" ""
	DEBIAN_CODENAME = $(shell dpkg-parsechangelog | awk '/^Distribution: / {print $$2}')
endif

ifeq "$(DEBIAN_CODENAME)" "jessie"
	GEGLOPT += --without-libavformat
endif

ifeq "$(DEBIAN_CODENAME)" "wily"
	GEGLOPT += --without-libavformat
endif

%:
	dh $@ --parallel

override_dh_auto_configure:
	cd $(CURDIR)/3rdparty/babl && \
	./autogen.sh $(BABLOPT) && \
	make -j$(NUMJOBS) && \
	make install
	cd $(CURDIR)/3rdparty/gegl && \
	PKG_CONFIG_PATH=$(PREFIXDIR)/lib/pkgconfig:${PKG_CONFIG_PATH} \
	PATH=$(PREFIXDIR)/bin:${PATH} \
	LD_RUN_PATH=$(PREFIXDIR)/lib:${LD_RUN_PATH} \
	./autogen.sh $(GEGLOPT) && \
	make -j$(NUMJOBS) && \
	make install
	cd $(CURDIR)/3rdparty/libmypaint && \
	PKG_CONFIG_PATH=$(PREFIXDIR)/lib/pkgconfig:${PKG_CONFIG_PATH} \
	PATH=$(PREFIXDIR)/bin:${PATH} \
	LD_RUN_PATH=$(PREFIXDIR)/lib:${LD_RUN_PATH} \
	./autogen.sh && ./configure $(MYPAINTOPT) && \
	make -j$(NUMJOBS) && \
	make install
	cd $(CURDIR)/3rdparty/lcms2 && \
	PKG_CONFIG_PATH=$(PREFIXDIR)/lib/pkgconfig:${PKG_CONFIG_PATH} \
	PATH=$(PREFIXDIR)/bin:${PATH} \
	LD_RUN_PATH=$(PREFIXDIR)/lib:${LD_RUN_PATH} \
	./autogen.sh && ./configure $(LCMSOPT) && \
	make -j$(NUMJOBS) && \
	make install
	cd $(CURDIR)/3rdparty/libpng && \
	PKG_CONFIG_PATH=$(PREFIXDIR)/lib/pkgconfig:${PKG_CONFIG_PATH} \
	PATH=$(PREFIXDIR)/bin:${PATH} \
	LD_RUN_PATH=$(PREFIXDIR)/lib:${LD_RUN_PATH} \
	./autogen.sh && ./configure $(LPNGOPT) && \
	make -j$(NUMJOBS) && \
	make install
	PKG_CONFIG_PATH=$(PREFIXDIR)/lib/pkgconfig:${PKG_CONFIG_PATH} \
	PATH=$(PREFIXDIR)/bin:${PATH} \
	LD_RUN_PATH=$(PREFIXDIR)/lib:${LD_RUN_PATH} \
	./autogen.sh $(GIMPOPT) && \
	make -j$(NUMJOBS) && \
	make install
override_dh_auto_build:
	

override_dh_auto_test:
	

override_dh_auto_clean:
	test ! -d $(PREFIXDIR) || rm -rf $(PREFIXDIR)
	cd $(CURDIR)/3rdparty/babl && test ! -f Makefile || make clean
	cd $(CURDIR)/3rdparty/gegl && test ! -f Makefile || make clean
	cd $(CURDIR)/3rdparty/libmypaint && test ! -f Makefile || make clean
	dh_auto_clean

override_dh_auto_install:
	ln -s $(CURDIR)/debian/tmp2 $(CURDIR)/debian/tmp
	find $(CURDIR)/debian/tmp2 -name '*.la' -delete
	cd $(CURDIR)/debian/tmp2/usr/lib/gimpgtk3/share/man/man1/ && gzip -n -9 gimp-?.??.1 gimptool-?.?.1
	cd $(CURDIR)/debian/tmp2/usr/lib/gimpgtk3/share/man/man5/ && gzip -n -9 *.5


override_dh_install:
	dh_install
	rm -f $(CURDIR)/debian/gimp-gtk3-dev/usr/lib/gimpgtk3/lib/libgegl-npd-0.3.so
	rm -f $(CURDIR)/debian/gimp-gtk3-dev/usr/lib/gimpgtk3/lib/libgegl-sc-0.3.so
	mv $(CURDIR)/debian/gimp-gtk3/usr/bin/gimp-gtk3.sh $(CURDIR)/debian/gimp-gtk3/usr/bin/gimp-gtk3
	mv $(CURDIR)/debian/gimp-gtk3/usr/bin/gimp-console-gtk3.sh $(CURDIR)/debian/gimp-gtk3/usr/bin/gimp-console-gtk3

override_dh_shlibdeps:
	dh_shlibdeps -ldebian/gimp-gtk3/usr/lib/gimpgtk3/lib/

